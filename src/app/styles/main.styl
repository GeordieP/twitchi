@require "./reset"
@require "./variables"
@require "./components/*"
@require "./pages/*"

html
    font-size: 10pt

body
    font-family: sans-serif
    background: $clr_pageBg
    color: #888
    overflow: hidden

h1
    font-size: 2.2rem

h2
    font-size: 1.8rem

input, select, button, textarea
    background: lighten($clr_pageBg, 4%)
    border: none
    padding: 9px 11px
    margin: 5px
    color: #eee
    border-left: 2px solid transparent
    outline: none

    &:focus
        border-color: $clr_lightPurple
        background: lighten($clr_pageBg, 9%)

main
    display: grid
    height: 100vh
    width: 100vw
    grid-template-rows: var(--size_navBar) 1fr
    grid-template-areas: \
        "nav" \
        "content"
nav
    grid-area: nav
    display: flex
    background: lighten($clr_pageBg, 4%)
    box-shadow: 1px 0 15px rgba(0, 0, 0, 0.2)

    .btn
        display: flex
        justify-content: center
        align-items: center
        width: var(--size_navBar)
        height: @width
        color: $clr_lightPurple
        text-decoration: none
        font-size: 1.6rem
        transition: background 0.2s ease-out, color 0.2s ease-out, border 0.2s ease-out
        border-left: 3px solid transparent
        &:hover
            background: lighten($clr_pageBg, 9%)
            border-color: $clr_lightPurple
            color: #eee

section.content
    grid-area: content
    overflow: auto

@media (min-width: 990px)
    :root
        --size_navBar: 60px
    main
        grid-template-rows: none
        grid-template-columns: var(--size_navBar) 1fr
        grid-template-areas: "nav content"

    nav
        flex-direction: column
