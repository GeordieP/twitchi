#streamsWrap {
    display: flex
    justify-content: center
    align-content: flex-start
    align-items: flex-start
}

#streamsInnerWrap {
    display: flex
    flex-direction: column

    >span>h2 {
        margin-top: 35px
        padding: 5px 0
        border-bottom: 1px solid lighten($clr_pageBg, 10%)
    }
}

.streamsView {
    // sass variables (for calculations; using CSS calc() is not working in media query setups)
    $tileWidth = 320px
    $gridGap = 15px
    padding: $gridGap 0

    // custom properties
    --numCols: 1

    display: inline-grid
    grid-gap: $gridGap
    grid-template-columns: repeat(var(--numCols), $tileWidth)

    for n in (2..6) {
        // calculate breakpoint widths based on n desired columns and grid item/grid gap settings
        // (tile width * desired col count) + (number of grid gaps * grid gap size)
        @media (min-width: ($tileWidth * n + (n - 1) * $gridGap)) {
            --numCols: n
        }
    }
}

// NAV BAR ITEMS //

// border around refresh icon
nav .autoRefreshEnabled {
    padding: 5px
    border-radius: 100px
    border: 2px solid darken($clr_twitchPurple, 30%)
}

// change color and rotate when refreshing
nav .refreshing {
    color: invert($clr_twitchPurple)
    border-color: @color
    animation: spinner 1.6s linear infinite
}

@keyframes spinner {
    to {
        transform: rotate(360deg)
    }
}
    
#noLive {
    display: flex
    width: 100%
    height: 100%
    justify-content: center
    align-content: center
    align-items: center
}
