$toastSpacing = 10px

.toaster {
    position: absolute
    display: flex
    flex-direction: column
    bottom: $toastSpacing*2
    right: @bottom
    z-index: 1
}

.toast {
    margin: $toastSpacing 0 0 0
    width: 250px
    padding: 10px
    background: lighten($clr_pageBg, 9%)
    border-left: 3px solid transparent
    cursor: pointer
    border-radius: 2px
    box-shadow: 0 0 25px #000

    &:hover {
        background: lighten($clr_pageBg, 14%)
    }

    h1 {
        color: #bbb
        font-size: 1.1rem
        margin-bottom: 4px
        font-weight: bold
    }
}

// Toast Types
// Style each toast based on its type
// each of these classes appended to toast corresponds to a value in
// the Toaster.ToastTypes object.
// The type value is appended directly to the class name of each toast, so the classes
// here must be kept the same as the ones listed in Toaster.ToastTypes (in Toaster.jsx)

.toast.TOAST_INFO {
    border-color: $clr_twitchPurple
}

.toast.TOAST_SUCCESS {
    border-color: #491
}

.toast.TOAST_WARNING {
    border-color: #990
}

.toast.TOAST_ERROR {
    border-color: #922
}
