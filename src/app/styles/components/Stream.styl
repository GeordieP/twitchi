.stream {
    position: relative
    width: 320px
    height: 180px
    display: flex
    flex-direction: column
    justify-content: space-between
    align-content: space-between
    align-items: space-between
    border-radius: 5px
    overflow: hidden
    box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.5)

    h1, h2, h3 {
        border: none
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.8)
        color: #fff
        padding: 0
        margin: 0.2rem 0
    }

    h1 {
        font-size: 1.6rem
        font-weight: bold
        margin: 0
    }

    h2 {
        font-size: 1.1rem
        color lighten($clr_lightPurple, 40%)
        font-weight: bold
    }

    h3 {
        font-size: 0.9rem
    }

    .stream_info, .stream_controls {
        width: 100%
        display: flex
        background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.4) 35%, transparent 70%)
        padding: 7px
        z-index: 1
        opacity: 1
        transition: opacity 0.2s
        transition-timing-function: cubic-bezier(.5, 0, .62, 1)
    }

    .stream_controls {
        height: auto
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5) 0%, transparent 90%)
        opacity: 0.4
        padding: 0
        i {
            padding: 7px
        }
    }

    &:hover {
        cursor: pointer

        .stream_info {
            opacity: 0
        }

        .stream_controls {
            opacity: 1

            color: white

            .fas.fa-star {
                color: lighten(gold, 50%)
            }
        }
    }

    .stream_info_inner {
        width: 100%
    }

    .stream_controls {
        width: 100%
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.7)
        color: rgba(255, 255, 255, 0.8)
        display: flex
        justify-content: space-between
        font-size: 1.3rem
    }

    .stream_channelInfo {
        display: flex
        flex-direction: row
        justify-content: space-between
        align-items: center
        align-content: center
    }

    img {
        position: absolute
        width: 100%
        height: @width
        border-radius: 5px
        overflow: hidden
    }

    .stream-is-live {
        font-size: 1.4rem
        margin-right: 5px
        color: #b33
    }
}
