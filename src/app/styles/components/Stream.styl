.stream {
    position: relative
    width: 320px
    height: 180px
    display: flex
    align-items: flex-end
    border-radius: 5px
    overflow: hidden
    box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.5)

    h1, h2, h3 {
        border: none
        text-shadow: 1px 1px 0 rgba(0, 0, 0, 0.7)
        color: #fff
        padding: 0
        margin: 0.2rem 0
    }

    h1 {
        font-size: 1.6rem
        font-weight: bold
        margin: 0
    }

    h2 {
        font-size: 1.1rem
        color lighten($clr_lightPurple, 40%)
        font-weight: bold
    }

    h3 {
        font-size: 0.9rem
    }

    .transitioned.stream_info {
        .stream_info {
            transform: translate(0, 320px)
        }
    }

    .stream_info {
        height: 100%
        display: flex
        flex-direction: row
        align-items: flex-end
        width: 100%
        background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, rgba(0, 0, 0, 0.4) 35%, transparent 70%)
        padding: 7px
        transform: translate(0, 0)
        transition: transform 0.3s
        transition-timing-function: cubic-bezier(.5, 0, .62, 1)
    }

    .stream_info_inner {
        width: 100%
    }

    .stream_channelInfo {
        display: flex
        flex-direction: row
        justify-content: space-between
        align-items: center
        align-content: center
    }

    &:hover {
        cursor: pointer

        .stream_info {
            transform: translate(0, 320px)
        }
    }

    img {
        position: absolute
        width: 100%
        height: @width
        border-radius: 5px
        overflow: hidden
    }

    .stream-is-live {
        font-size: 1.4rem
        margin-right: 5px
        color: #b33
    }
}
